<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:id="@+id/text1"
        style="@style/LargeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:text="Select category" />

    <RelativeLayout
        android:id="@+id/item_choose_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text1"
        android:layout_marginBottom="60dp"
        android:paddingBottom="16dp">

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/view"
            android:layout_alignEnd="@id/view">


            <TextView
                android:id="@+id/textactive"
                style="@style/LargeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Active" />

            <pl.kitowcy.louis.proposition.ClickableImageView
                android:id="@+id/activeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textactive"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/category_active" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/view"
            android:layout_alignTop="@id/view">

            <TextView
                android:id="@+id/textimage"
                style="@style/LargeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Image" />

            <pl.kitowcy.louis.proposition.ClickableImageView
                android:id="@+id/imageImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textimage"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/category_image" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/view"
            android:layout_alignStart="@id/view">

            <TextView
                android:id="@+id/textsound"
                style="@style/LargeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Sound" />

            <pl.kitowcy.louis.proposition.ClickableImageView
                android:id="@+id/soundImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textsound"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/category_sound" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/view"
            android:layout_alignTop="@id/view">

            <TextView
                android:id="@+id/textmovie"
                style="@style/LargeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Movie" />

            <pl.kitowcy.louis.proposition.ClickableImageView
                android:id="@+id/movieImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textmovie"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/category_movie" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>